<h1 class="text-center">{{user.userName}}</h1>
<div class="my-2 text-center">
  {{#if imagen}}
  <img src="/img/perfiles/{{imagen}}" alt="" class="rounded-circle my-3" />
    {{else}}
  <img src="/img/perfiles/perfil-1.jpg" alt="" class="rounded-circle my-3" />
  {{/if}}
</div>

<form
  action="/perfil?_csrf={{csrfToken}}"
  method="post"
  enctype="multipart/form-data"
>
  <input type="file" name="fotoPerfil" id="fotoPerfil" class="form-control" />
  <Button class="btn btn-dark">Cambiar imagen de perfil</Button>
</form>